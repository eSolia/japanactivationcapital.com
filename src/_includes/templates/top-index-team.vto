<!-- p-index-team -->
<section class="p-index-team">
  <div class="l-inner u-fadeInDown" data-scroll-animation>
    <h2 class="c-section-title c-section-title--reverse"><span>team</span></h2>
    <div class="p-index-team__container c-tab">
      <ul class="p-index-team__labels" role="tablist">
        <li data-tab="item" role="presentation">
          <button role="tab" class="p-index-team__tab" aria-selected="true" aria-controls="tab-1"
            data-tab="button">Investment Team</button>
        </li>
        <li data-tab="item" role="presentation">
          <button role="tab" class="p-index-team__tab" aria-selected="false" aria-controls="tab-2"
            data-tab="button">Special Value Creation Team</button>
        </li>
        <li data-tab="item" role="presentation">
          <button role="tab" class="p-index-team__tab" aria-selected="false" aria-controls="tab-3"
            data-tab="button">CEO Office</button>
        </li>
        <li data-tab="item" role="presentation">
          <button role="tab" class="p-index-team__tab" aria-selected="false" aria-controls="tab-4"
            data-tab="button">Corporate Team</button>
        </li>
        <li data-tab="item" role="presentation">
          <button role="tab" class="p-index-team__tab" aria-selected="false" aria-controls="tab-5"
            data-tab="button">Board Members</button>
        </li>
        <li data-tab="item" role="presentation">
          <button role="tab" class="p-index-team__tab" aria-selected="false" aria-controls="tab-6"
            data-tab="button">Advisors</button>
        </li>
      </ul>
      <div class="p-index-team__body">
        <!-- Investment Teamここから -->
        <div id="tab-1" class="c-tab__content c-tab__content--hidden" aria-hidden="false">
          <div class="p-index-team__list-wrapper" data-team-list>
              <ul class="p-index-team__list">
                {{ for item of search.pages(`tags*=Investment type=bio lang=${lang}`, "weight") }}
                  <li class="p-index-team__item">
                    <a href="{{ item.url }}" class="c-card-member">
                      <p class="c-card-member__role">{{ item.position }}</p>
                      <p class="c-card-member__name">{{ item.name }}</p>
                      <figure class="c-card-member__img c-shadow-item">
                        <img src="{{ item.img }}" alt="Bio page list thumbnail for {{ item.name }}, {{ item.position }}" width="240" height="300" decoding="async">
                      </figure>
                    </a>
                  </li>
                {{ /for }}
              </ul>
          </div>
        </div>
        <!-- Investment Teamここまで -->
        <!-- Special Value Creation Teamここから -->
        <div id="tab-2" class="c-tab__content c-tab__content--hidden" aria-hidden="true">
          <div class="p-index-team__list-wrapper" data-team-list>
              <ul class="p-index-team__list">
                {{ for item of search.pages(`tags*=ValueCreate type=bio lang=${lang}`, "weight") }}
                  <li class="p-index-team__item">
                    <a href="{{ item.url }}" class="c-card-member">
                      <p class="c-card-member__role">{{ item.position }}</p>
                      <p class="c-card-member__name">{{ item.name }}</p>
                      <figure class="c-card-member__img c-shadow-item">
                        <img src="{{ item.img }}" alt="Bio page list thumbnail for {{ item.name }}, {{ item.position }}" width="240" height="300"
                          decoding="async">
                      </figure>
                    </a>
                  </li>
                {{ /for }}
              </ul>
          </div>
        </div>
        <!-- Special Value Creation Teamここまで -->
        <!-- CEO Officeここから -->
        <div id="tab-3" class="c-tab__content c-tab__content--hidden" aria-hidden="true">
          <div class="p-index-team__list-wrapper" data-team-list>
              <ul class="p-index-team__list">
                {{ for item of search.pages(`tags*=CEOOffice type=bio lang=${lang}`, "weight") }}
