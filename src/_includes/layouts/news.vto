---
layout: ./base.vto
containerClass: news
---
<section class="news" id="news-detail">
  <div class="inner">
    <h1 class="new-title">{{ title }}</h1>
    {{ if it.img }}
    <div class="news-photo">
      <img src="{{ it.img }}" alt="{{ it.imgalt }}" width="400" transform-images="avif webp jpg 400@2">
    </div>
    {{ /if }}
    <div class="txt from-markdown">
      {{ content }}
    </div>
  </div>
</section>
