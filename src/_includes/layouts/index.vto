---
layout: layouts/base.vto
containerClass: index
---

<section class="kv">
  <div class="inner">
    <div class="logo">
      <h1>
        <img src="/assets/img/logo_w.svg" alt="Logo for Japan Activation Capital, Inc. in svg format." width="496">
      </h1>
    </div>
  </div>
</section>

{{# <section class="lead">
  <div class="inner">
    {{ lead }}
  </div>
</section> #}}

<section class="mission" id="mission">
  <div class="inner">
    {{ mission }}
  </div>
</section>

<section class="goal" id="goal">
  <div class="inner">
    {{ goal }}
  </div>
</section>

<section class="approach" id="approach">
  <div class="inner">
    {{ approach }}
  </div>
</section>

<section class="company" id="company">
  <div class="inner">
    {{ company }}
  </div>
</section>

<section class="news" id="newslist">
  <div class="inner">
    <h2 class="new-title">{{ news.title }}</h2>
    <div class="desc">
      <ul class="news-list" id="news">
        {{ for item of search.pages(`type=news lang=${lang}`, "date=desc", 8) }}
        <li>
          <time class="txt-bl"><strong>{{ item.date |> date(undefined, lang) }}</strong></time>
          {{ if item.external_link }}
            <p><a href="{{ item.external_link }}" target="_blank">{{ item.title }}</a></p>
          {{ else }}
            <p><a href="{{ item.url }}">{{ item.title }}</a></p>
          {{ /if }}
        </li>
        {{ /for }}
      </ul>

      {{ for item of news.links }}
      <a class="link" href="{{ item.url }}">
        {{ item.text }}
        <div class="icon"><img src="/assets/img/icon_arrow.svg" alt="Right-facing arrow icon indicating a link to another page."></div>
      </a>
      {{ /for }}
      
    </div>
  </div>
</section>

<section class="inquiries" id="inquiries">
  <div class="inner">
    {{ inquiries }}
  </div>
</section>
