---
layout: ./base.vto
containerClass: bio
---
<section class="bio" id="bio-view">
  <div class="inner">
    <div class="bio-view-header">
      <img src="{{ it.img }}" alt="Bio page photo for {{ name }}, {{ position }}" width="350" transform-images="avif webp jpg 350@2">
      <h2 class="new-title">{{ name }}</h2>
      <h3>{{ position }}</h3>
      <p>{{ short }}</p>
    </div>
    <div class="txt from-markdown">
      {{ bio |> md }}
    </div>
  </div>
</section>
